{
  // Define the package as private to prevent accidental publishing
  // and specify the MIT license for the project
  "private": true,
  "license": "MIT",

  // Specify the minimum required Node.js version as 18 or higher
  "engines": {
    "node": ">=18"
  },

  // Define various npm scripts for development, building, and starting the application
  "scripts": {
    // Run the Next.js development server
    "dev": "next",

    // Watch for changes in the specified directory for remote data fetching
    "dev:watch": "next-remote-watch ./posts",

    // Execute a script to build backlinks
    "build:backlinks": "node ./scripts/post-links",

    // Execute a script to gather webmentions
    "build:webmentions": "node ./scripts/get-webmentions",

    // Build the application, install playwright, and execute post-build steps
    "build": "npm run build:backlinks && npx playwright install && next build && npm run postbuild",

    // Execute a script for post-build operations
    "postbuild": "node ./scripts/build-search.js",

    // Start the production server
    "start": "next start"
  },

  // Specify project dependencies
  "dependencies": {
    // Various libraries and packages used in the project
    "@headlessui/react": "^1.4.2",
    "@heroicons/react": "^2.0.10",
    "@tippyjs/react": "^4.2.5",
    "algoliasearch": "^4.11.0",
    "babel-plugin-styled-components": "1.10.2",
    "chrome-aws-lambda": "^10.1.0",
    "crypto": "^1.0.1",
    "d3": "^7.1.1",
    "date-fns": "^2.28.0",
    "dotenv": "^10.0.0",
    "feed": "^4.2.2",
    "framer-motion": "^4.1.17",
    "gray-matter": "^4.0.2",
    "gsap": "^3.8.0",
    "imagemagick": "^0.1.3",
    "instantsearch.css": "^7.4.5",
    "lodash": "^4.17.21",

    // Next.js is specified as the latest version
    "next": "latest",

    // Specify version numbers for styled-components and other dependencies
    "next-mdx-remote": "^4.0.3",
    "next-pwa": "^5.4.1",
    "next-remote-watch": "1.0.0",
    "next-seo": "^4.28.1",
    "nextjs-google-analytics": "^2.3.3",
    "playwright-aws-lambda": "^0.7.0",
    "playwright-core": "^1.17.1",
    "prism-react-renderer": "^1.2.1",
    "react": "^17.0.2",
    "react-collapsed": "^3.3.2",
    "react-dom": "^17.0.2",
    "react-gsap": "^3.2.1",
    "react-instantsearch-dom": "^6.17.0",
    "react-intersection-observer": "^8.32.1",
    "react-masonry-css": "^1.0.16",
    "react-share": "^4.4.0",
    "react-twitter-embed": "^3.0.3",
    "react-use-clipboard": "^1.0.7",
    "rehype-autolink-headings": "^5",
    "rehype-slug": "^4",
    "styled-components": "4.4.1"
  },

  // Specify development dependencies
  "devDependencies": {
    // Loader for handling CSS in development
    "css-loader": "^6.5.1",

    // Loader for injecting styles into the DOM during development
    "style-loader": "^3.3.1"
  }
}
